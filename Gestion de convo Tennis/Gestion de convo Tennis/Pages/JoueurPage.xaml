<Page x:Class="Gestion_de_convo_Tennis.Pages.JoueurPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gestion_de_convo_Tennis.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Joueur">

    <Grid Background="White">
        <Border Background="LightGray" Margin="10,27,576,23" BorderBrush="Gray" BorderThickness="2" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" ShadowDepth="5" Direction="290" />
            </Border.Effect>
        </Border>
        <Grid Height="400" Margin="10,27,576,23">
            <Label Content="CREER UN JOUEUR" Margin="0,0,-2,369" HorizontalAlignment="Center" FontWeight="Bold" />
            <Grid Height="30" Margin="0,31,0,339" >
                <Label Content="Nom :" Margin="0,0,145,4"/>
                <TextBox x:Name="nomJoueurTextBox" HorizontalAlignment="Left" Height="27" TextWrapping="Wrap" TextAlignment="Left" VerticalContentAlignment="Center" Width="141" Margin="63,0,0,4"/>
            </Grid>
            <Grid Height="30" Margin="0,61,0,309">
                <Label Content="Prenom :" Margin="0,0,145,4"/>
                <TextBox x:Name="prenomJoueurTextBox" HorizontalAlignment="Left" Height="27" TextWrapping="Wrap" TextAlignment="Left" VerticalContentAlignment="Center" Width="141" Margin="63,0,0,4"/>
            </Grid>
            <Grid Height="30" Margin="0,91,0,279">
                <Label Content="Mail :" Margin="0,2,145,-2"/>
                <TextBox x:Name="mailJoueurTextBox" HorizontalAlignment="Left" Height="27" TextWrapping="Wrap" TextAlignment="Left" VerticalContentAlignment="Center" Width="141" Margin="63,0,0,0.295"/>
            </Grid>
            <Grid Height="30" Margin="0,121,0,249" >
                <Label Content="Catégorie :" Margin="0,2,139,-2"/>
                <ComboBox x:Name="categorieJoueurCombo" HorizontalAlignment="Left" Margin="84,2,0,0" VerticalAlignment="Top" Width="120" Height="29"/>
            </Grid>
            <Grid Height="30" Margin="0,151,0,219" >
                <Label Content="Classement :" Margin="0,2,139,-2"/>
                <ComboBox x:Name="classementJoueurCombo" HorizontalAlignment="Left" Margin="84,2,0,0" VerticalAlignment="Top" Width="120" Height="29"/>
            </Grid>
            <DataGrid Margin="10,186,10,114">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fichiers" Binding="{Binding Fichier}" Width="250"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="ajouterFichier" Content="Ajouter un fichier" HorizontalAlignment="Left" Margin="50,304,0,0" VerticalAlignment="Top" Width="116" Height="31"/>
            <Button x:Name="validerJoueur" Content="Valider" HorizontalAlignment="Left" Margin="50,340,0,0" VerticalAlignment="Top" Width="116" Height="31"/>
        </Grid>
        <Grid Height="400" Width="550"  Margin="241,27,0,23">
            <DataGrid Margin="0,0,81,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>
                    <DataGridTextColumn Header="Prenom" Binding="{Binding Prenom}" Width="*"/>
                    <DataGridTextColumn Header="Mail" Binding="{Binding Mail}" Width="*"/>
                    <DataGridTextColumn Header="Categorie" Binding="{Binding Categorie}" Width="*"/>
                    <DataGridTextColumn Header="Classement" Binding="{Binding Classement}" Width="*"/>
                    <DataGridTextColumn Header="Fichier" Binding="{Binding Fichier}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="editerJoueur" Content="Editer" HorizontalAlignment="Left" Margin="474,10,0,0" VerticalAlignment="Top" Width="75" Height="31"/>
        </Grid>
    </Grid>
</Page>
